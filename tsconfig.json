{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",              // Cho phép import/export
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",              // Output sau khi build
    "rootDir": "./src",              // Thư mục code nguồn
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
