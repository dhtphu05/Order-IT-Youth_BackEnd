{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",              // Thay đổi từ ESNext
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "experimentalDecorators": true,    // Thêm dòng này
    "emitDecoratorMetadata": true,      // Thêm dòng này
    "strictPropertyInitialization": false,  // Thêm dòng này

  },
  "include": ["src", "ormconfig.ts"],
  "exclude": ["node_modules"]
}